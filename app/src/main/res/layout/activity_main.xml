<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top bar: app name + language spinner -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="LiveScribe"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/secondary"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:spinnerMode="dropdown"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- Scrollable transcript area -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toTopOf="@id/controlPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transcriptCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_bg"
                android:padding="18dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:strokeColor="@color/card_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:text="TODAY, 10:23 AM"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transcriptText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="6dp"
                        android:padding="5dp"
                        android:text="Start speaking to see your transcription here. The AI will detect your voice and convert it to text in real-time."
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <!-- Copy & Highlight buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copyBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="Copy"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/highlightBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="Highlight"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom control panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/controlPanel"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/control_bg"
            android:padding="14dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/controlInner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Record FAB on the left -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabRecord"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:backgroundTint="@color/accent"
                    app:srcCompat="@android:drawable/ic_btn_speak_now"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp" />

                <!-- Stop button on the right -->
                <ImageButton
                    android:id="@+id/stopBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/round_small_button"
                    android:src="@android:drawable/ic_media_pause"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

